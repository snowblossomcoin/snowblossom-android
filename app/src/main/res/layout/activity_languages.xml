<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enginious.snowblossom.LanguagesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        >

        <Button
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/snowbutton_red"
            android:fontFamily="@font/pt_sans"
            android:text="English"
            android:textAllCaps="false"
            android:id="@+id/btn_english_language_settings"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/snowbutton_green"
            android:fontFamily="@font/pt_sans"
            android:text="Spanish"
            android:textAllCaps="false"
            android:id="@+id/btn_spanish_language_settings"
            android:textColor="@color/colorAccent" />



    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycler_activity_languages"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->



    <!--</android.support.v7.widget.RecyclerView>-->

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SeedPreviewActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="Seed"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_seed_seedpreview"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_copy_seedpreview"
        android:layout_width="200dp"
        android:layout_height="48dp"

        android:layout_marginTop="368dp"
        android:background="@drawable/snowbutton_purple"
        android:text="Copy"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_seed_seedpreview"
        android:layout_width="341dp"
        android:layout_height="136dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/tv_background"
        android:padding="5dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>